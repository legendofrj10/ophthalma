<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
           xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="sample.loginController">
   <TextField fx:id="loginIdField" focusTraversable="false" layoutX="50.0" layoutY="50.0" maxHeight="10.0"
              maxWidth="250.0" prefHeight="10.0" prefWidth="117.0" promptText="ID">
      <StackPane.margin>
         <Insets bottom="150.0"/>
      </StackPane.margin>
      <effect>
         <DropShadow/>
      </effect>
      <font>
         <Font name="System Bold" size="14.0"/>
      </font>
   </TextField>
   <PasswordField fx:id="loginPassField" focusTraversable="false" maxHeight="10.0" maxWidth="250.0" prefHeight="10.0"
                  prefWidth="117.0" promptText="PASSWORD">
      <StackPane.margin>
         <Insets bottom="50.0"/>
      </StackPane.margin>
      <effect>
         <DropShadow/>
      </effect>
      <font>
         <Font name="System Bold" size="13.0"/>
      </font>
   </PasswordField>
   <Label text="ID" textFill="#a8a0a0" visible="false">
      <StackPane.margin>
         <Insets bottom="150.0" right="280.0"/>
      </StackPane.margin>
   </Label>
   <Label layoutX="163.0" layoutY="117.0" text="PASSWORD" textFill="#b2b2b2" visible="false">
      <StackPane.margin>
         <Insets bottom="50.0" right="343.0"/>
      </StackPane.margin>
   </Label>
   <Button fx:id="loginbtn" maxWidth="250.0" mnemonicParsing="false" onAction="#checkLogin" prefWidth="250.0"
           text="LOGIN">
      <StackPane.margin>
         <Insets top="50.0"/>
      </StackPane.margin>
   </Button>
   <Button fx:id="signupbtn" mnemonicParsing="false" onAction="#signUp" text="SIGN UP">
      <StackPane.margin>
         <Insets left="440.0" top="290.0"/>
      </StackPane.margin>
   </Button>
   <Button fx:id="troublebtn" mnemonicParsing="false" onAction="#troubleLogin" prefHeight="26.0" prefWidth="147.0"
           text="Trouble in login">
      <StackPane.margin>
         <Insets right="380.0" top="290.0"/>
      </StackPane.margin>
   </Button>
   <Label text="OPHTHALMA">
      <StackPane.margin>
         <Insets bottom="300.0"/>
      </StackPane.margin>
      <font>
         <Font name="Ubuntu" size="29.0"/>
      </font>
      <effect>
         <Reflection topOpacity="0.06"/>
      </effect>
   </Label>
   <Label fx:id="loginerror" textAlignment="CENTER" textFill="RED">
      <StackPane.margin>
         <Insets top="100.0"/>
      </StackPane.margin>
   </Label>
</StackPane>
